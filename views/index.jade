extends layouts/layout
block header
    div.hero-header

block content
    div.container.content.reset-padding(ng-app='agranda-y-punto')
        div.user-content.container(ng-controller='UserRegister as uc')
            script(type="text/ng-template", id="myModalContent.html")
                include parts/modalTemplate
            form.user-content-form(name="userForm")
                fieldset.user-content-first
                    div.form-group.row
                        label.col-md-2.col-xs-4.col-sm-3(for='name')='NOMBRE COMPLETO*'
                        div.col-md-10.col-xs-8.col-sm-9
                            input.form-control#name(name='name', type='text', required, ng-model="uc.user.name")
                    div.form-group.row
                        div.col-xs-12.col-md-5
                            select#doc-type.form-control(ng-model="uc.user.identType")
                                option(value='')='TIPO DE DOCUMENTO'
                                option(value='cc')='CÉDULA DE CIUDADANÍA'
                        label.col-xs-12.col-md-2(for='doc-number')='No. DOCUMENTO'
                        div.col-xs-12.col-md-5
                            input#doc-number.form-control(name='doc-number', type='number', ng-model="uc.user.identification",required)
                    div.form-group.col-xs-12.birthdate
                        label.col-md-3.col-xs-12.reset-padding='¿CUANDO NACISTE?'
                        input(rsmdatedropdowns, ng-model="uc.user.birth")
                    div.form-group.col-xs-6.col-md-6.right-container
                        label.col-xs-12.col-md-4.reset-padding(for='cellphone')='CELULAR*'
                        div.col-xs-12.col-md-8.reset-padding
                            input.form-control#cellphone(type='number', name='cellphone', required, ng-model="uc.user.cellPhone")
                    div.form-group.col-xs-6.col-md-6.left-container
                        label.col-xs-12.col-md-4.reset-padding(for='phone')='TELÉFONO*'
                        div.col-xs-12.col-md-8.reset-padding
                            input.form-control#phone(type='number', name='phone', required, ng-model="uc.user.phone")
                    div.form-group.col-xs-12
                        label.col-xs-4.col-md-2.col-sm-3.reset-padding(for='address')='DIRECCIÓN'
                        div.col-xs-8.col-md-10.col-sm-9.reset-padding
                            input.form-control#address(type='text', name='address', ng-model="uc.user.address")
                    div.form-group.col-md-5.col-xs-12
                        label.col-xs-4.col-md-4.col-sm-3.reset-padding(for='city')='CIUDAD DE RESIDENCIA'
                        div.col-xs-8.col-md-8.col-sm-9
                            input.form-control#city(type='text', name='city', ng-model="uc.user.city")
                    div.form-group.col-md-7.col-xs-12
                        label.col-xs-4.col-md-2.col-sm-3.reset-padding(for='email')='EMAIL*'
                        div.col-xs-8.col-md-10.col-sm-9.reset-padding
                            input.form-control#email(type='email', name='email', required, ng-model="uc.user.email")
                    div.form-group.col-xs-12
                        label.col-xs-4.col-md-2.col-sm-3.reset-padding(for='franchise')='PUNTO DE VENTA'
                        div.col-xs-8.col-md-10.col-sm-9.reset-padding
                            input.form-control#franchise(type='text', name='franchise', ng-model="uc.user.franchise")


                fieldset.user-content-second
                    div(ng-repeat="row in uc.user.rows")
                        div.form-group.col-xs-12.col-md-6.reset-padding
                            label.col-md-6.col-xs-5.col-sm-4(for='invoice-number')='NÚMERO DE FACTURA*'
                            div.col-md-6.col-xs-7.col-sm-8.reset-padding
                                input.form-control#invoice-number(name='invoice-number', ng-model="row.invoice", required)
                        div.form-group.col-xs-12.col-md-6.reset-padding
                            label.col-md-5.col-xs-5.col-sm-4(for='bono-number')='NÚMERO DE BONO*'
                            div.col-md-7.col-xs-7.col-sm-8.reset-padding
                                input.form-control#bono-number(name='bono-number', type="number", max="350000", min="0", ng-model="row.code", required)
                    div.form-group.col-xs-12.col-md-4
                        label.terms-conditions='Acepto Términos y Condiciones '
                        input.terms-conditions-checkbox(type='checkbox', value='', required)
                    div.form-group.col-xs-12.col-md-8
                        button.col-xs-9.col-md-5.send-button(type='submit', ng-click="uc.addUser(userForm)")='ENVIA PUNTOS'
                        button.col-xs-3.plus-button.pull-right(type='button', ng-click="uc.addRow()")=' '
                        footer.form-footer.visible-xs
                            a.form-footer(href="http://www.sandwichqbano.com/terminos-y-condiciones-agranda-y-punto/", target="_blank")
                                |Conoce  Términos y Condiciones
                            br
                            |Todos los derechos reservados QBANO 2016
                footer.footer.hidden-xs
                    a.footer(href="http://www.sandwichqbano.com/terminos-y-condiciones-agranda-y-punto/", target="_blank")
                        |Conoce  Términos y Condiciones
                    | - Todos los derechos reservados QBANO 2016


block scripts
    script(type='text/javascript',  src='/scripts/app.js')