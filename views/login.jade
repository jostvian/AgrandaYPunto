extends layouts/layout

block content
    div.form-signin.row
        div.well.bs-component
            form#LoginForm.form-horizontal(action='/login/', method='POST')
                fieldset
                    legend='Iniciar Sesión'
                    div.form-group
                        div.col-lg-12
                            input#UserName.form-control(type='text', placeholder='Usuari@', maxlength='50', name='username', required)
                    div.form-group
                        div.col-lg-12
                            input#password.form-control(type='password', name='password', placeholder='Contraseña', maxlength='32', required)
                    div.form-group
                        div.col-lg-12
                            button#LoginButton.btn.btn-primary(type='submit')
                                i.fa.fa-sign-in=' Ingresar'